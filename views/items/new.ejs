<%- include ('../partial/header') %>

<h1 class="h3 mb-4 text-gray-800">Add Item</h1>
<form action="/feasibilities/<%= feasibility._id %>/items/new" method="POST">
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="type">Item Type</label>
      <select class="form-control form-control-option" id="type" name="type" required>
        <option value="">SELECT</option>
      </select>
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="name">Item Name</label>
      <select class="form-control form-control-option" id="name" name="name" required>
        <option value="">SELECT</option>
      </select>
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="measurement">Unit</label>
      <input type="text" class="form-control" id="measurement" placeholder="Unit" name="measurement" required />
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="unitRate">Unit Rate</label>
      <input type="number" step="0.01" class="form-control" id="unitRate" placeholder="Unit Rate" name="unitRate" required />
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="qty">Quantity</label>
      <input type="number" class="form-control" id="qty" placeholder="Quantity" name="qty" required />
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="amt">Total</label>
      <input type="number" class="form-control" id="amt" placeholder="0" name="amt" disabled />
    </div>
  </div>

  <button type="submit" class="btn btn-primary btn-icon-split">
    <span class="icon text-white-50"><i class="fas fa-flag"></i></span><span class="text">Submit</span>
  </button>
</form>

<%- include ('../partial/footer') %>

<!-- Page level custom scripts -->
<script src="/js/lcreport.items.js"></script>

