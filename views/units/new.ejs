<%- include ('../partial/header') %>

<h1 class="h3 mb-4 text-gray-800">Unit Form</h1>
<form action="/units/new" method="POST">
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="name">Unit Name</label>
      <input type="text" class="form-control" id="name" placeholder="Unit Name" name="name" required />
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="type">Unit Type</label>
      <select class="form-control form-control-option" id="type" name="type" required>
        <option value="">SELECT</option>
        <% types.forEach((type) =>{ %>
        <option value="<%= type %>"><%= type %></option>
        <% }) %>
      </select>
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="measurement">Unit Measurement</label>
      <select class="form-control form-control-option" id="measurement" name="measurement" required>
        <option value="">SELECT</option>
        <% measurements.forEach((measurement) =>{ %>
        <option value="<%= measurement %>"><%= measurement %></option>
        <% }) %>
      </select>
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="unitRate">Unit Rate</label>
      <input type="number" step="0.01" class="form-control" id="unitRate" placeholder="Unit Rate" name="unitRate" required />
    </div>
  </div>

  <button type="submit" class="btn btn-primary btn-icon-split">
    <span class="icon text-white-50"><i class="fas fa-flag"></i></span><span class="text">Submit</span>
  </button>
</form>

