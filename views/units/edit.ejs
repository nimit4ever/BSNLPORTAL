<%- include ('../partial/header') %>

<h1 class="h3 mb-4 text-gray-800">Unit Edit Form</h1>
<form action="/units/<%= unit._id %>?_method=PUT" method="POST">
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="type">Unit Type</label>
      <select class="form-control form-control-option" id="type" name="type" required>
        <option value="<%= unit.type %>"><%= unit.type %></option>
        <% types.forEach((type) =>{ %>
        <option value="<%= type %>"><%= type %></option>
        <% }) %>
      </select>
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="name">Unit Name</label>
      <input type="text" class="form-control" id="name" value="<%= unit.name %>" name="name" required />
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="measurement">Unit Measurement</label>
      <select class="form-control form-control-option" id="measurement" name="measurement" required>
        <option value="<%= unit.measurement %>"><%= unit.measurement %></option>
        <% measurements.forEach((measurement) =>{ %>
        <option value="<%= measurement %>"><%= measurement %></option>
        <% }) %>
      </select>
    </div>
  </div>

  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="unitRate">Unit Rate</label>
      <input type="number" step="0.01" class="form-control" id="unitRate" value="<%= unit.unitRate %>" name="unitRate" required />
    </div>
  </div>

  <button type="submit" class="btn btn-primary btn-icon-split">
    <span class="icon text-white-50"><i class="fas fa-flag"></i></span><span class="text">Save</span>
  </button>
</form>

<%- include ('../partial/footer') %>
