<%- include('./partial/header') %>

<div class="text-center">
  <h1 class="h4 text-gray-900 mb-4">Reset Password</h1>
</div>
<form class="user" action="/auth/reset/<%= token %>" method="POST">
  <div class="form-group">
    <input
      type="password"
      class="form-control form-control-user"
      name="password"
      placeholder="Password"
      minlength="5"
      maxlength="255"
      required
    />
  </div>
  <div class="form-group">
    <input
      type="password"
      class="form-control form-control-user"
      name="confirm"
      placeholder="Confirm Password"
      minlength="5"
      maxlength="255"
      required
    />
  </div>
  <div class="form-group">
    <button class="btn btn-primary btn-user btn-block">Submit</button>
  </div>
</form>
<hr />
<div class="text-center">
  <a class="small" href="/auth/forget">Forgot Password?</a>
</div>
<div class="text-center">
  <a class="small" href="/auth/signup">Create an Account!</a>
</div>

