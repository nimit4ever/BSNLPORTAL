<%- include("./partial/header") %>

<div class="text-center">
  <h1 class="h4 text-gray-900 mb-4">Welcome Back!</h1>
</div>
<form class="user" action="/auth/signin" method="POST">
  <div class="form-group">
    <input type="text" class="form-control form-control-user" name="username" placeholder="Enter Username..." />
  </div>
  <div class="form-group">
    <input type="password" class="form-control form-control-user" name="password" placeholder="Password" />
  </div>
  <div class="form-group">
    <div class="custom-control custom-checkbox small">
      <input type="checkbox" class="custom-control-input" id="customCheck" />
      <label class="custom-control-label" for="customCheck">Remember Me</label>
    </div>
  </div>
  <div class="form-group">
    <button class="btn btn-primary btn-user btn-block">Login</button>
  </div>
</form>
<hr />
<div class="text-center">
  <a class="small" href="/auth/forgot">Forgot Password?</a>
</div>
<div class="text-center">
  <a class="small" href="/auth/signup">Create an Account!</a>
</div>

